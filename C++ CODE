
#include<iostream>
using namespace std ;

	void cal (int a, int b,char op) ;
	int main (){
int p ,q ;
char ch;
cout<<"Enter first number, Operator, Second number"<<endl;
cin>>p>>ch>>q;
cout<<endl;

cal(p,q,ch);    
return 0;
	}
	
	void cal ( int a, int b, char op)
{

switch (op){
case'+':
	cout<<a<<"+"<<b<<"="<<a+b<<endl;
	break;
case'*':
	cout<<a<<"*"<<b<<"="<<a*b<<endl;
	break;
	case'-':
	cout<<a<<"-"<<b<<"="<<a-b<<endl;
	break;
	case'/':
	cout<<a<<"/"<<b<<"="<<a/b<<endl;
	break;
	case'%':
	cout<<a<<"%"<<b<<"="<<a%b<<endl;
	break;
	default :
		cout<<"Invalid Operator"<<endl;
	}
	}

